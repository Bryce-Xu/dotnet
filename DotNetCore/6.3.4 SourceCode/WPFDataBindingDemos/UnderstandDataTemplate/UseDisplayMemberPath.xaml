<Window x:Class="UnderstandDataTemplate.UseDisplayMemberPath"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="clr-namespace:UnderstandDataTemplate"

    Title="指定DisplayMemberPath属性" SizeToContent="Height" Width="350">
    <StackPanel Margin="10">
        <ListBox ItemsSource="{Binding Source={x:Static local:DataProvider.MyDataObjectCollection}}"
                 DisplayMemberPath="Value"/>
    </StackPanel>
</Window>
